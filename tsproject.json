{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "declaration",
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "composite": true,
    "baseUrl": "./",
    "outDir": "./build",
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "rootDir": ".",
    "importHelpers": true,
    "noEmitHelpers": true,
    "verbatimModuleSyntax": true,
    "lib": [
      "dom", "esnext"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules"
  ]
}
