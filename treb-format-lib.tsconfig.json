{
  "compilerOptions": {
    "target": "es5",
    "module": "ES2015",
    "allowJs": false,
    "strict": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "moduleResolution": "node",
    "outDir": "dist2/",
    "declaration": true,
    "declarationDir": "dist2/",
    "lib": [
      "dom", "es2015"
    ],
    "paths": {
      "treb-base-types": ["treb-base-types/"]
    },
    "baseUrl": "."
  },
  "include": [
    "treb-format/src/**/*.ts",
    "treb-base-types/src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "treb-format/src/**/*.test.ts"
  ]
}
