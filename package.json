{
  "name": "treb",
  "version": "19.3.0",
  "main": "dist/index.js",
  "dependencies": {
    "base64-js": "^1.3.1",
    "fast-xml-parser": "^4.0.7",
    "file-saver": "^2.0.5",
    "he": "^1.2.0",
    "jszip": "^3.6.0",
    "riskampjs-mc": "file:../riskampjs-mc",
    "treb-base-types": "file:treb-base-types",
    "treb-calculator": "file:treb-calculator",
    "treb-charts": "file:treb-charts",
    "treb-format": "file:treb-format",
    "treb-grid": "file:treb-grid",
    "treb-parser": "file:treb-parser",
    "treb-utils": "file:treb-utils",
    "z85-codec": "^0.1.0"
  },
  "devDependencies": {
    "@types/base64-js": "^1.3.0",
    "@types/file-saver": "^2.0.2",
    "@types/he": "^1.1.1",
    "@types/node": "^17.0.31",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "archiver": "^5.3.0",
    "cssnano": "^5.1.5",
    "esbuild": "^0.14.11",
    "esbuild-sass-plugin": "^2.0.3",
    "eslint": "^8.15.0",
    "fs-extra": "^10.0.0",
    "sass": "^1.51.0",
    "ts-node-dev": "^1.1.8",
    "tslib": "^2.2.0",
    "typescript": "^4.6.4",
    "ws": "^8.8.0"
  },
  "scripts": {
    "build": "node esbuild.js",
    "dev": "node esbuild.js --dev",
    "watch": "node esbuild.js --watch",
    "tsc": "tsc -b treb-embed/modern.tsconfig.json",
    "tsc-mc": "tsc -b treb-mc/modern.tsconfig.json",
    "generate-api": "ts-node-dev api-types/api2.ts --config api-config.json && cp treb.d.ts release-distribution-files/",
    "watch-api": "ts-node-dev --respawn api-types/api2.ts --config api-config.json && cp treb.d.ts release-distribution-files/",
    "watch-modern-mc": "node esbuild.js --watch --modern --dev",
    "watch-modern": "node esbuild.js --watch --modern --dev --nomc",
    "build-modern": "node esbuild.js --modern",
    "watch-cookie": "node esbuild.js --watch --cookie --dev",
    "build-cookie": "node esbuild.js --cookie",
    "update-icons": "node treb-embed/script/process-icons.js --filter unused --source treb-embed/icons/4 > treb-embed/src/generated/toolbar42.ts",
    "release": "node esbuild.js --clean --modern --module --nomc && npm run tsc && npm run generate-api && node copy-distribution-files.js && node zip-package.js --name treb",
    "release-mc": "node esbuild.js --clean --modern --module && npm run tsc && npm run generate-api && node copy-distribution-files.js && node zip-package.js --name riskamp-web",
    "ws-server": "ts-node-dev --project treb-ws/server/tsconfig.json --respawn treb-ws/server/src/index.ts"
  },
  "build-entry-points": {
    "main": "treb-bundle",
    "calculation-worker": "treb-worker",
    "export-worker": "treb-export-worker"
  }
}
