{
  "name": "treb",
  "version": "21.2.2",
  "main": "dist/index.js",
  "dependencies": {
    "fast-xml-parser": "^4.0.7",
    "file-saver": "^2.0.5",
    "he": "^1.2.0",
    "jszip": "^3.6.0",
    "treb-base-types": "file:treb-base-types",
    "treb-calculator": "file:treb-calculator",
    "treb-charts": "file:treb-charts",
    "treb-format": "file:treb-format",
    "treb-grid": "file:treb-grid",
    "treb-parser": "file:treb-parser",
    "treb-utils": "file:treb-utils"
  },
  "devDependencies": {
    "@types/base64-js": "^1.3.0",
    "@types/file-saver": "^2.0.2",
    "@types/he": "^1.1.1",
    "@types/node": "^18.0.1",
    "@typescript-eslint/eslint-plugin": "^5.30.4",
    "@typescript-eslint/parser": "^5.30.4",
    "archiver": "^5.3.0",
    "cssnano": "^5.1.5",
    "esbuild": "^0.14.48",
    "esbuild-sass-plugin": "^2.0.3",
    "eslint": "^8.19.0",
    "fs-extra": "^10.0.0",
    "sass": "^1.53.0",
    "ts-node-dev": "^2.0.0",
    "tslib": "^2.2.0",
    "typescript": "^4.6.4",
    "ws": "^8.8.0"
  },
  "scripts": {
    "build": "node esbuild.js",
    "dev": "node esbuild.js --dev",
    "watch": "node esbuild.js --watch",
    "tsc": "tsc -b treb-embed/modern.tsconfig.json",
    "watch-tsc": "tsc -b treb-embed/modern.tsconfig.json -w ",
    "generate-api": "ts-node-dev api-generator/api-generator.ts --config api-config.json && cp treb.d.ts release-distribution-files/ && cp treb.d.ts release-distribution-files/esm",
    "watch-api": "ts-node-dev --respawn api-generator/api-generator.ts --config api-config.json && cp treb.d.ts release-distribution-files/ && cp treb.d.ts release-distribution-files/esm",
    "watch-modern": "node esbuild.js --watch --modern --dev",
    "watch-module": "node esbuild.js --watch --module --dev",
    "build-modern": "node esbuild.js --modern --embed-worker",
    "watch-cookie": "node esbuild.js --watch --cookie --dev",
    "build-cookie": "node esbuild.js --cookie",
    "update-icons": "node treb-embed/script/process-icons.js --filter unused --source treb-embed/icons/4 > treb-embed/src/generated/toolbar42.ts",
    "release": "node esbuild.js --clean --modern --module --embed-worker && npm run tsc && npm run generate-api && node util/copy-distribution-files.js && node util/zip-package.js --name treb",
    "ws-server": "ts-node-dev --project treb-ws/server/tsconfig.json --respawn treb-ws/server/src/index.ts"
  },
  "build-entry-points": {
    "main": "treb-bundle",
    "calculation-worker": "treb-worker",
    "export-worker": "treb-export-worker"
  }
}
