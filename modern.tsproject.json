{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "declaration",
    "target": "esnext",
    "module": "es2020",
    "strict": true,
    "composite": true,
    "baseUrl": "./",
    "outDir": "./dist/modern",
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "rootDir": ".",
    "importHelpers": true,
    "noEmitHelpers": true,
    "lib": [
      "dom", "es2015"
    ],
    "paths": {
      "@grid-conditional/*": ["./treb-grid/src/conditional/modern/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "external-declaration-files"
  ]
}
