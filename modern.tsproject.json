{
  "compilerOptions": {
    "declaration": true,
    "target": "es6",
    "module": "es2020",
    "strict": true,
    "composite": true,
    "baseUrl": "./",
    "outDir": "./dist/modern",
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "rootDir": ".",
    "importHelpers": true,
    "noEmitHelpers": true,
    "lib": [
      "dom", "es2015"
    ]
  },
  "exclude": [
    "node_modules",
    "external-declaration-files"
  ]
}
